<div class="main--home">
  <div class="main--home--search">
    <%= form_with url: punch_clock_path, method: 'get', remote: true do |f| %>
      <%= f.text_field :name, placeholder: "Enter your full name", class: 'main--home--search--input' %>
      <%= f.submit 'Go!', class: 'main--home--search--button' %>
    <% end %>
  </div>
  <div class="main--home--results">
  </div>
</div>
